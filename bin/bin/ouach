#!/bin/sh
sfeed_update
url=$(sfeed_plain "$HOME/.sfeed/feeds/"* | fzf | sed -n 's@^.* \([a-zA-Z]*://\)\(.*\)$@\1\2@p')
if [ -n "${url}" ]; then
    if echo "$url" | grep -iq "youtube"; then
        mpv --ytdl-raw-options=yes-playlist=,no-check-certificates=,write-automatic-subs=,sub-langs=en "$url"
    else
        $BROWSER "$url"
    fi
fi
